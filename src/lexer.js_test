import {
  INTEGER,
  REAL,
  DIV,
  BEGIN,
  END,
  PROGRAM,
  PLUS,
  MINUS,
  INTEGER_DIV,
  MUL,
  EOF,
  LPAREN,
  RPAREN,
  ID,
  SEMI,
  COLON,
  COMMA,
  VAR,
  REAL_CONST,
  INTEGER_CONST,
  ASSIGN,
  DOT,
  FLOAT_DIV,
} from "./helpers.js";

export class Token {
  constructor(type, value) {
    this.type = type;
    this.value = value;
  }
}

const RESERVED_KEYWORDS = {
  DIV: new Token(INTEGER_DIV, DIV),
  INTEGER: new Token(INTEGER, INTEGER),
  REAL: new Token(REAL, REAL),
  BEGIN: new Token(BEGIN, BEGIN),
  END: new Token(END, END),
  VAR: new Token(VAR, VAR),
  PROGRAM: new Token(PROGRAM, PROGRAM),
};

export class Lexer {
  constructor(text) {
    this.text = text;
    this.pos = 0;
    this._currentChar = this.text[this.pos];
  }

  _advance() {
    this.pos = this.pos + 1;

    if (this.pos > this.text.length - 1) {
      this._currentChar = null;
    } else {
      this._currentChar = this.text[this.pos];
    }
  }

  _isInteger() {
    return Number.isInteger(parseInt(this._currentChar));
  }

  _isAlphaChar() {
    const code = this._currentChar.charCodeAt(0);

    if ((code > 64 && code < 91) || (code > 96 && code < 123)) {
      return true;
    }

    return false;
  }

  _isAlfaNum() {
    return this._isInteger() || this._isAlphaChar();
  }

  _isSpace() {
    return this._currentChar === " " || this._currentChar === "\n";
  }

  _isEOF() {
    return this._currentChar === null;
  }

  _id() {
    let result = "";

    while (!this._isEOF() && this._isAlfaNum()) {
      result += this._currentChar;
      this._advance();
    }

    return RESERVED_KEYWORDS[result.toUpperCase()] ?? new Token(ID, result);
  }

  _number() {
    let result = "";

    while (!this._isEOF() && this._isInteger()) {
      result += this._currentChar;
      this._advance();
    }

    if (this._currentChar === ".") {
      result += this._currentChar;

      this._advance();

      while (!this._isEOF() && this._isInteger()) {
        result += this._currentChar;
        this._advance();
      }
      return new Token(REAL_CONST, Number(result));
    } else {
      return new Token(INTEGER_CONST, Number(result));
    }
  }

  _skipWhiteSpaces() {
    while (!this._isEOF() && this._isSpace()) {
      this._advance();
    }
  }

  _skipComment() {
    while (!this._isEOF() && this._currentChar !== "}") {
      this._advance();
    }

    this._advance();
  }

  _peek() {
    const pos = this.pos + 1;

    if (pos > this.text.length - 1) {
      return null;
    } else {
      return this.text[pos];
    }
  }

  getNextToken() {
    while (!this._isEOF()) {
      if (this._isSpace()) {
        this._skipWhiteSpaces();
        continue;
      }

      if (this._currentChar === "{") {
        this._advance();
        this._skipComment();
        continue;
      }

      if (this._isInteger()) {
        return this._number();
      }

      if (this._isAlphaChar()) {
        return this._id();
      }

      const currentChar = this._currentChar;

      if (currentChar === ":" && this._peek() === "=") {
        this._advance();
        this._advance();
        return new Token(ASSIGN, ":=");
      }

      if (currentChar === ":") {
        this._advance();
        return new Token(COLON, currentChar);
      }

      if (currentChar === ";") {
        this._advance();
        return new Token(SEMI, currentChar);
      }

      if (currentChar === ".") {
        this._advance();
        return new Token(DOT, currentChar);
      }

      // if (currentChar === ".") {
      //   this._advance();
      //   return new Token(DOT, currentChar);
      // }

      if (currentChar === "+") {
        this._advance();
        return new Token(PLUS, currentChar);
      }

      if (currentChar === "-") {
        this._advance();
        return new Token(MINUS, currentChar);
      }

      if (currentChar === "*") {
        this._advance();
        return new Token(MUL, currentChar);
      }

      if (currentChar === "/") {
        this._advance();
        return new Token(FLOAT_DIV, currentChar);
      }

      if (currentChar === ",") {
        this._advance();
        return new Token(COMMA, currentChar);
      }

      if (currentChar === "(") {
        this._advance();
        return new Token(LPAREN, currentChar);
      }

      if (currentChar === ")") {
        this._advance();
        return new Token(RPAREN, currentChar);
      }
    }
    return new Token(EOF, null);
  }
}
